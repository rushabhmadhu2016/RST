<div class="modal fade" id="addCategoryModel">
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
              <div class="row">
                <form method="post" action="/category/store" name="categoryform" id="categoryform">
                  <input type="hidden" name="propertyId" id="propId" value="">
                      <div class="review-title">
                        <h2 class="edit-title text-center">Add Category</h2>
                      </div>
                      <div class="section-seprator"></div>
                        <div class="row review-titles">
                            <div class="col-lg-12 form-group" id="addreviewres_msg"></div>
                        </div>  
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  edit-description form-group">
                        <span class="post-title">Category_Name</span>
                        <input type="text" name="category_name" id="category_name" required="required" placeholder="Enter Category Name">
                        <textarea name="review_desc" id="review_desc"></textarea>
                      </div>
                      <div class="edit-media-section">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 edit-add-media error_msg form-group">
                              <span class="post-title edit-add"></span>
                           </div>
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                              <button type="submit" id="saveReview" class="save-btn info-btn  pull-right">SAVE</button>
                              <button type="button" id="addreviewclosebtn" class="save-btn info-btn  pull-right" onclick="window.location.reload()" style="display:none;">CLOSE</button>
                           </div>
                        </div>    
                    </form>
               </div>
      </div>
    </div>
  </div>
</div>
  