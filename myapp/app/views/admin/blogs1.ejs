<% include template/head %>
<% include template/subheader %>
<div class="content-wrapper">
  <!-- Page header -->
  <div class="page-header page-header-default">
    <div class="page-header-content">
      <div class="page-title">
        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> - Blogs</h4>
      </div>
    </div>

    <div class="breadcrumb-line">
      <ul class="breadcrumb">
        <li><a href="home"><i class="icon-home2 position-left"></i> Home</a></li>
        <li class="active">Blogs</li>
      </ul>
    </div>
  </div>
  <!-- /page header -->

  <!-- Content area -->
  <div class="content">

    <!-- Dashboard content -->
    <div class="panel panel-flat panel-admin">
        <div class="panel-body table-responsive">
            <% if (error.length > 0) { %>
                <div class="alert alert-danger"><%- error %></div>
              <% } %>

              <% if (success.length > 0) { %>
                <div class="alert alert-success"><%- success %></div>
              <% } %>
            <table class="table datatable-basic" id="dataTable">
                <thead>
                    <tr>
                        <th>Sr. No</th>
                        <th>Blog Title</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                    var i=1;
                    if (blogs) {
                      blogs.forEach((blog) => { %>              
                      <tr>
                        <td><%=i++%></td>
                        <td><%= blog.blog_title %></td>
                        <td align="center"><a href="/admin/editblog?edit=<%= blog.id %>"><i class="icon-pencil"></i></a>&nbsp;

                          <a onclick="return confirmmessage('Are you sure you want to delete this blog? ','/admin/deleteblog?delete=<%= blog.id %>')" href="javascript:void(0)"><i class="icon-trash"></i></a>
                        </td>
                      </tr>
                    <% }) } %>                
                </tbody>
            </table>
            <caption><a href="/admin/addblog" class="btn btn-primary">Add Blog</a></caption>
        </div>
    </div>
    
    <!-- /dashboard content -->
<% include template/subfooter%>   
<% include template/footer%>
      
