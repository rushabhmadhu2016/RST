<% include template/head %>
<% include template/subheader %>
<div class="content-wrapper">
  <!-- Page header -->
  <div class="page-header page-header-default">
    <div class="page-header-content">
      <div class="page-title">
        <h4><span class="text-semibold">Home</span> - Email Template</h4>
      </div>
      <div class="heading-elements">
        <div class="heading-btn-group">
          <a href="/admin/addemail" class="btn btn-primary">Add New Template <i class="icon-plus-circle2 ml-5"></i></a>
        </div>
      </div>
    </div>

    <div class="breadcrumb-line">
      <ul class="breadcrumb">
        <li><a href="home"><i class="icon-home2 position-left"></i> Home</a></li>
        <li class="active"><i class="icon-envelop4 position-left"></i>Email Template</li>
      </ul>
    </div>
  </div>
  <!-- /page header -->

  <!-- Content area -->
  <div class="content">

    <!-- Dashboard content -->
    <div class="panel panel-flat">
      <div class="panel-body">
          <% if (error.length > 0) { %>
            <div class="alert alert-danger"><%- error %></div>
          <% } %>
        <% if (success.length > 0) { %>
          <div class="alert alert-success"><%- success %></div>
        <% } %>
      </div>
      <table class="table datatable-basic" id="dataTable">
          <thead>
              <tr>
                  <th>Sr. No</th>
                  <th>Email Type</th>
                  <th>Email Name</th>
                  <th>Subject</th>
                  <th>Status</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
              <% 
              var i=1;
              if (emailsList) {
                emailsList.forEach((emil) => { %>
                <tr>
                  <td><%=i++%></td>
                  <td><%= emil.email_type %></td>
                  <td><%= emil.email_name %></td>
                  <td><%= emil.email_subject %></td>
                  <th>e</th>
                  <td align="center">

                    <ul class="icons-list">
                      <li><a href="/admin/editemail?edit=<%= emil.id %>" data-popup="tooltip" title="Edit"><i class="icon-pencil7"></i></a></li>
                      <li><a href="#" data-popup="tooltip" title="Remove"><i class="icon-trash"></i></a></li>
                      <li><a href="view_blogs.html" data-popup="tooltip" title="View"><i class="icon-eye8"></i></a></li>
                    </ul>

                    <!--<a onclick="return confirmmessage('Are you sure you want to delete this email template? ','/admin/deleteemail?delete=<%= emil.id %>')" href="javascript:void(0)"><i class="icon-trash"></i></a>-->
                  </td>
                </tr>
              <% }) } %>  
          </tbody>
      </table>
    </div>
    
    <!-- /dashboard content -->
<% include template/subfooter%>   
<% include template/footer%>
      
