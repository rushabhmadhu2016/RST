<% include template/head %>
<% include template/subheader %>
<div class="content-wrapper">
  <!-- Page header -->
  <div class="page-header page-header-default">
    <div class="page-header-content">
      <div class="page-title">
        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> - Categories</h4>
      </div>
    </div>

    <div class="breadcrumb-line">
      <ul class="breadcrumb">
        <li><a href="home"><i class="icon-home2 position-left"></i> Home</a></li>
        <li class="active">Categories</li>
      </ul>
    </div>
  </div>
  <!-- /page header -->

  <!-- Content area -->
  <div class="content">

    <!-- Dashboard content -->
    <div class="panel panel-flat panel-admin">
        <div class="panel-body table-responsive">
            <% if (error.length > 0) { %>
                <div class="alert alert-danger"><%- error %></div>
              <% } %>

              <% if (success.length > 0) { %>
                <div class="alert alert-success"><%- success %></div>
              <% } %>
            <table class="table datatable-basic" id="dataTable">
                <thead>
                    <tr>
                        <th>Sr. No</th>
                        <th>Category Name</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                  <% 
                  var i=1;
                  if (categories) {
                        categories.forEach((category) => { %>              
                   <tr>
                      <td><%=i++%></td>
                      <td><%= category.category_name %></td>                               
                      <td align="center"><a href="/admin/editcategory?edit=<%= category.id %>"><i class="icon-pencil"></i></a>&nbsp;
                      <!--<a onclick="return confirm('Are you sure you want to delete this category? ')" href="/admin/deletecategory?delete=<%= category.id %>"><i class="fa fa-trash"></i></a>-->

                        <a onclick="return confirmmessage('Are you sure you want to delete this category? ','/admin/deletecategory?delete=<%= category.id %>')" href="javascript:void(0)"><i class="icon-trash"></i></a>
                      </td>
                    </tr>
                    <% }) } %>
                </tbody>
            </table>
            <caption><a href="/admin/addcategory" class="btn btn-primary">Add Category</a></caption>
        </div>
    </div>
    
    <!-- /dashboard content -->

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
    <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      <!-- /Modal content-->
    </div>
  </div>
  <!-- /Modal -->
<% include template/subfooter%>   
<% include template/footer%>
      
