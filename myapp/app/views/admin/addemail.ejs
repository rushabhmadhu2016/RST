<% include template/head %>
<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
<% include template/subheader %>
<div class="content-wrapper">
  <!-- Page header -->
  <div class="page-header page-header-default">
    <div class="page-header-content">
      <div class="page-title">
        <h4><i class="icon-arrow-left52 position-left"></i> 
        <% if(email==''){%>
        <span class="text-semibold">Home</span> - Add Email Tempate</h4>
        <%}else{%>
        <span class="text-semibold">Home</span> - Edit Email Tempate</h4>
        <%}%>          
      </div>
    </div>

    <div class="breadcrumb-line">
      <ul class="breadcrumb">
        <li><a href="home"><i class="icon-home2 position-left"></i> Home</a></li>
        <li class="active"><a href="emails"><i class="icon-envelop4 position-left"></i>Emails</a></li>
        <% if(email==''){%>
          <li class="active">Add Email Tempate</li>
        <%}else{%>
          <li class="active">Edit Email Tempate</li>
        <%}%>
      </ul>
    </div>
  </div>
  <!-- /page header -->

  <!-- Content area -->
  <div class="content">

    <!-- Dashboard content -->
    <div class="panel panel-flat panel-admin">
        <div class="panel-body">

          <% if (error.length > 0) { %>
                <div class="alert alert-danger"><%- error %></div>
              <% } %>

              <% if (success.length > 0) { %>
                <div class="alert alert-success"><%- success %></div>
              <% } %>

            <% 
            var i=1;
            if(email==''){%>
            <form name="emails_form" method="post" action="/admin/storeemail">
            <%}else{%>
            <form name="updateemails_form" method="post" action="updateemail">
            <%}%>
              <div class="form-group">
                <label for="title">Email Keys</label>
                <input type="text" name="email_keys" id="title" class="form-control" placeholder="Email Keys" value="<%if(email!=''){%><%=email.email_keys%><%}%>">
              </div>

              <div class="form-group">
                <label for="title">Email Name</label>
                <input type="text" name="email_name" id="title" class="form-control" placeholder="Enter email name" value="<%if(email!=''){%><%=email.email_name%><%}%>">
              </div>

              <div class="form-group">
                <label for="title">Email Subject</label>
                <input type="text" name="email_subject" id="title" class="form-control" placeholder="Enter email subject" value="<%if(email!=''){%><%=email.email_subject%><%}%>">
              </div>

              <div class="form-group ck_editerror">
                <label for="email_message">Content</label>
                <textarea name="email_message" id="email_message" class="form-control" rows="5" placeholder="Email Message"><%if(email!=''){%><%=email.email_message%><%}%></textarea>
              </div>
              <%if(email!=''){%>
              <input type="hidden" name="email_id" value="<%=email.id%>">
              <%}%>
              <input type="submit" name="submit_btn" value="<%=(email!='') ? 'Update' : 'Add';%>" class="btn btn-success">
              <a href="emails" class="btn btn-primary">Cancel</a>
            </form>
        </div>
    </div>
    
    <!-- /dashboard content -->
<% include template/subfooter%>   
  <script src="/js/validation/emailvalidation.js"></script>
  <script>
    CKEDITOR.replace( 'email_message' );
  </script>
<% include template/footer%>
      
