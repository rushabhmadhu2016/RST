<% include template/head %>
  <script src="../assets/js/app.js"></script>
<% include template/subheader %>
  <!-- Page header -->
  <div class="page-header page-header-light">
    <div class="page-header-content header-elements-md-inline">
      <div class="page-title d-flex">
        <h4> <span class="font-weight-semibold">Admin</span> - <%=(categories!='') ? 'Edit Category' : 'Add New Category';%></h4>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
      </div>

      <div class="header-elements d-none">
      </div>
    </div>

    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
      <div class="d-flex">
        <div class="breadcrumb">
          <a href="home" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
          <a href="categories" class="breadcrumb-item"><i class="icon-list3 mr-2"></i> Categories</a>
          <span class="breadcrumb-item active"><i class="<%=(categories!='') ? 'icon-pencil6 mr-2' : 'icon-add mr-2';%>"></i><%=(categories!='') ? 'Edit Category' : 'Add New Category';%></span>
        </div>
      </div>
    </div>
  </div>
  <!-- /page header -->
  <!-- Content area -->
  <div class="content">
    <% include template/flashmessage %>
    <!-- Basic layout-->
            <div class="card">
              <div class="card-header header-elements-inline">
                <h5 class="card-title"><%=(categories!='') ? 'Edit Category' : 'Add Category';%></h5>
              </div>

              <div class="card-body">
                <fieldset>
                    <legend class="font-weight-semibold text-uppercase font-size-sm"></legend>
                    <% if(categories==''){%>
                      <form role="form" action="/admin/category/store" method="post" name="categoryform">
                    <%}else{%>
                      <form role="form" action="updateCategory" method="post" name="categoryform">
                    <%}%>
                        <div class="form-group row">
                          <label class="col-lg-3 col-form-label">Category Name:</label>
                          <div class="col-lg-9">
                            <input type="text" name="category_name" id="category_name" class="form-control" placeholder="Enter Category Name" value="<%if(categories!=''){%><%=categories.category_name%><%}%>" required="required">
                          </div>
                        </div>
                        <div class="text-right">
                          <button type="submit" class="btn btn-primary"><%=(categories!='') ? 'Update Category' : 'Add Category';%><i class="icon-paperplane ml-2"></i></button>
                          <a href="/admin/categories" class="btn btn-primary"><i class="icon-arrow-left7 position-left"></i> Back to Listing</a>
                        </div>
                      </form>
                </fieldset>
              </div>
            </div>
            <!-- /basic layout -->
  </div>
  <!-- /content area -->
<% include template/subfooter%>
<script src="/js/validation/addcategoryvalidation.js"></script>  
<% include template/footer%>
      
