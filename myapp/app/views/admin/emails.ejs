<% include template/head %>
<% include template/subheader %>
  <!-- Page header -->
  <div class="page-header page-header-default">
    <div class="page-header-content">
      <div class="page-title">
        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> - Email Template</h4>
      </div>
    </div>

    <div class="breadcrumb-line">
      <ul class="breadcrumb">
        <li><a href="home"><i class="icon-home2 position-left"></i> Home</a></li>
        <li class="active">Email Template</li>
      </ul>
    </div>
  </div>
  <!-- /page header -->

  <!-- Content area -->
  <div class="content">

    <!-- Dashboard content -->
    <div class="panel panel-flat panel-admin">
        <div class="panel-body table-responsive">
            <% if (error.length > 0) { %>
                <div class="alert alert-danger"><%- error %></div>
              <% } %>

              <% if (success.length > 0) { %>
                <div class="alert alert-success"><%- success %></div>
              <% } %>
            <table class="table datatable-basic" id="dataTable">
                <thead>
                    <tr>
                        <th>Sr. No</th>
                        <th>Email Type</th>
                        <th>Email Name</th>
                        <th>Subject</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                    var i=1;
                    if (emailsList) {
                      emailsList.forEach((emil) => { %>
                      <tr>
                        <td><%=i++%></td>
                        <td><%= emil.email_type %></td>
                        <td><%= emil.email_name %></td>
                        <td><%= emil.email_subject %></td>
                        <td align="center"><a href="/admin/editemail?edit=<%= emil.id %>"><i class="icon-pencil"></i></a>&nbsp;

                          <!--<a onclick="return confirmmessage('Are you sure you want to delete this email template? ','/admin/deleteemail?delete=<%= emil.id %>')" href="javascript:void(0)"><i class="icon-trash"></i></a>-->
                        </td>
                      </tr>
                    <% }) } %>  
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- /dashboard content -->
<% include template/subfooter%>   
<% include template/footer%>
      
