<% include template/head %>
<link href="../assets/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="../assets/js/custom/bootstrap-toggle.min.js"></script>
<style>
  .toggle.ios, .toggle-on.ios, .toggle-off.ios { border-radius: 20px; }
