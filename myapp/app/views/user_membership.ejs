<!DOCTYPE html>
 <html lang="en">
    <head>
        <% include frontend/template/head %>
    </head>
    <body>
        <% include frontend/template/subnav %>
        <section class="testimonial-section text-justify">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                       <div class="panel panel-default listing-page-inner">
                         <div class="panel-heading">User Membership</div>
                           <div class="panel-body">
                             <% include frontend/template/error %>
                                <p class="text-center">Your current membership is <%-user.membership.membership_title%>. <br /> We have some more featured memberships for you that you can opt-in for more benitifts and enjoy a lot.</p> 
                                <% i=1;%>                               
                                <table class="table table-hover table-stripped table-bordered membership_list">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Title</th>
                                            <th>Cost(In SST Tokens)</th>
                                            <th>Tokens can be earned</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%
                                        memberships.forEach(function(membership){ %>
                                            <tr>
                                            <th><%-i++;%></th>
                                            <th><%-membership.membership_title%></th>
                                            <th><%-membership.membership_cost%></th>
                                            <th><%-membership.token_limit%></th>
                                            </tr>    
                                        <% })
                                        %>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        
                    </div>
                </div>
            </div>
        </div>        
        </section> 
   <!-- Footer -->
   <% include frontend/template/subfooter %>
   <script src="/js/validation/profilevalidation.js"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $("#token_amount").blur(function(){
            var amount = $(this).val();
            var token_price=parseFloat($(".token_price").val());
            console.log(token_price);
            var bill = amount*token_price;
            console.log(bill);
            $(".cost_pay").html(bill);
            $(".cost_amount").val(bill);
        })
    })
    </script>
   </body>
 </html> 